{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Custom hats",
  "version": "1.0",
  "description": "An extension to replace boring vanilla miniblox hats with some DEF better",
  "author": "SmoothDude, Mystic",
  "background": {"service_worker": "background.js"},
  "icons": {
    "128": "Hat.png"
  },
  "permissions": [
   "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://miniblox.io/*",
    "https://miniblox.online/*",
    "https://miniblox.org/*",
    "https://raw.githubusercontent.com/*"
  ]
}
